//Perguntar
//EXP -> EXP´ (OP EXP ")" )* 
Exp Exp() :
{Exp e1 = null;
 Exp e2 = null;
  String op = null;
}
{

 e1 = ExpL() (op = Op() e2 = ExpL())*
  {
    return op == null ? e1 : new EOpExp(op, e1, e2);
  }
}
//Perguntar
//EXP´ -> "(" EXP OP EXP ")" | FATOR
Exp ExpL():
{Exp e;}
{
   (<APAR> e = Exp() <FPAR>
 | e = Fator())
 {return e;}
}
// FATOR -> TOKEN_id | TOKEN_id "(" LISTAEXP? ")"
//| TOKEN_numliteral | "true" | "false"
Exp Fator() :
{
  ArrayList<Exp> exps = null; 
  Token var = null;
  Token num = null;
  Exp result = null;
}
{
  (var = <ID> (<APAR> (exps = ListaExp())? <FPAR>)?{
    if(exps == null){
      result = new EVar(var.image);
    }else{
      result = new  EChamadaFun(var.image, exps);
    }
  }
 |num =  <NUM> {
    result = new EFloat(Float.parseFloat(num.image));
 }
 | <TRUE>{
    result = new ETrue();

 }
 | <FALSE>{
    result = new EFalse();
 }
  )
 {
  return result;
 }
}
//OP -> "+" | "-" | "*" | "/" | "&" | "|" | "<" | ">" | "=="
String Op() :
{String op = null;}
{

   <PLUS>{op = "+";}
 | <MINUS>{op = "-";}
 | <MULT>{op = "*";}
 | <DIV>{op = "/";}
 | <AND>{op = "&";}
 | <OR>{op = "|";}
 | <LESSER>{op = "<";}
 | <BIGGER>{op = ">";}
 | <COMP>{op = "==";}
 {return op;}

}
