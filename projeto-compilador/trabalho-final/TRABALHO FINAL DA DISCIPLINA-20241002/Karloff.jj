Main Main () :
{ArrayList<VarDecl>  varDecl = null; ArrayList<Comando> comandos = null ;}
{

 <VOID> <MAIN> <APAR> <FPAR> <ACHAVES> varDecl = VarDecl() comandos=SeqComandos() <FCHAVES> 

