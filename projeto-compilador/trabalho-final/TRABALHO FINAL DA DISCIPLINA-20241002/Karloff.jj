// SEQCOMANDOS ->  COMANDO +
ArrayList<Comando> SeqComandos() :
{ArrayList<Comando> comandos = new ArrayList<Comando>(); Comando c = null;}
{

 (c = Comando(){comandos.add(c);})+
 {return comandos;}
}

// COMANDO -> TOKEN_id COMANDO’
