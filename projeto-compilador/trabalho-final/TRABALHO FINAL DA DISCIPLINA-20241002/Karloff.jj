// | "while" EXP "{" SEQCOMANDOS "}" ";"
// | "return" EXP ";"
// | "printOut" EXP ";"
Comando Comando() :
{
  Comando resultado = null;
  Comando comando_ = null;
}
{
   (
     resultado = Atribuicao()
|   resultado = Cond()
|  resultado = Loop()
|  resultado  = Return()
|  resultado = Print()

   )

  {return resultado;}  
}


